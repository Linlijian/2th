@model IEnumerable<_2th.Entities.Post>

@{
    ViewBag.Titles = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @ViewData["A"]</h2>
<div class="row">
    <div class="col-3">@Html.DisplayNameFor(model => model.TagName)</div>
    <div class="col-6">@Html.DisplayNameFor(model => model.Title)</div>
    <div class="col-3">@Html.DisplayNameFor(model => model.Auther)</div>
</div>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-3">@Html.DisplayFor(modelItem => item.TagName)</div>
        <div class="col-6">@Html.DisplayFor(modelItem => item.Title)</div>
        <div class="col-3">@Html.DisplayFor(modelItem => item.Auther)</div>
    </div>
}